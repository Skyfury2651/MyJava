<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateStudentServlet</servlet-name>
        <servlet-class>controller.CreateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateStudentServlet</servlet-name>
        <url-pattern>/admin/students/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListStudentServlet</servlet-name>
        <servlet-class>controller.ListStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListStudentServlet</servlet-name>
        <url-pattern>/admin/students/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditStudentServlet</servlet-name>
        <servlet-class>controller.EditStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditStudentServlet</servlet-name>
        <url-pattern>/admin/students/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <servlet-class>controller.DeleteStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <url-pattern>/admin/students/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailStudentServlet</servlet-name>
        <servlet-class>controller.DetailStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailStudentServlet</servlet-name>
        <url-pattern>/admin/students/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TestStudentServlet</servlet-name>
        <servlet-class>controller.TestStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestStudentServlet</servlet-name>
        <url-pattern>/admin/students/test</url-pattern>
    </servlet-mapping>
</web-app>